<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment">

    <TextView
        android:id="@+id/tv_meaning"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:text="@string/meaning_0"
        android:gravity="center"
        android:fontFamily="@font/sf_regular"
        android:textSize="88sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_marginBottom="34dp"
        android:padding="12dp">

        <Button
            android:id="@+id/btn_increase"
            android:backgroundTint="@color/grey_btn"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="@string/Increase"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/newyork"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:drawableEnd="@drawable/ic_plus_one"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/btn_reduce"
            android:backgroundTint="@color/grey_btn"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:text="@string/reduce"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/newyork"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:drawableEnd="@drawable/ic_minus_one"
            />

    </LinearLayout>
</FrameLayout>